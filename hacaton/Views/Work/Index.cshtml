@model List<Work>

@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}
<h2>Заказы</h2>
<div class="table_section">
    @if (@Model.Count == 0)
    {
        <p>Пока что, заказов еще нет!</p>
    }
    else
    {
        <table class="table table-light table-striped">
            <thead>
            <tr>
                <th>Имя автора</th>
                <th>Тема</th>
                <th>Категория</th>
                <th>Дата добавления</th>
                <th></th>
            </tr>            
            </thead>
            <tbody>
            @foreach (var order in @Model)
            {
                <tr>
                    <td>@order.User.Name</td>
                    <td>@order.Name</td>
                    <td>@order.Category.Name</td>
                    <td>@order.CreatedDate.ToString("dd-MM-yyyy")</td>
                </tr>
            }            
            </tbody>
        </table>
    }
</div>